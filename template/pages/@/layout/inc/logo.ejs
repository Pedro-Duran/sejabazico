<%
// store logo object
const mysettings = _.cms('settings') || {}

const logo = mysettings.logo
  ? { url: mysettings.logo, alt: mysettings.name }
  : _.store.logo
if (logo && logo.url) {
  let { width, height } = _.tryImageSize(logo.url)
  console.log(width, height)
  %>
  <img
    id="logo"
    class="header__logo"
    src="<%= logo.url %>"
    alt="<%= logo.alt %>"
    <% if (width) { %>
      width="<%= width %>"
      height="<%= height %>"
    <% } else { %>
      width="380"
      height="107"
    <% } %>
  >
<% } else { %>
  <%= mysettings.name || _.store.name %>
<% } %>
