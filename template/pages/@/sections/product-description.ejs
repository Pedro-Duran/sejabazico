<% if (_.state.body_html) { %>
  <section id="product-description" class="product-description my-4 my-lg-5">
    <div class="container">
      <p class="lead">
        <a href="#description" name="description">#</a>
        <%= _.dictionary('productDescription') %>
      </p>
      <div class="html-clearfix">
        <%- _.state.body_html.replace(
          /<img ([^/>]+)?src=['"]([^'"]+)['"]([^/>]+)?\/?>/g,
          '<img class="lozad" data-src="$2" $1 $3>'
        ).replace(
          /<img class="lozad" data-src="([^'"]+)"([^>]+)class=['"]([^'"]+)['"]([^/>]+)?>/g,
          '<img class="lozad $3" data-src="$1" $2 $4>'
        ) %>
      </div>
    </div>
  </section>
<% } %>

<div class="skeepers_product__reviews" data-product-id="<%= _.state._id %>" data-locale="pt_BR" data-price="<%= _.state.price %>" data-currency="BRL" data-name="<%= _.state.name %>" data-url="https://www.sejabazico.com.br/<%= _.state.slug %>" data-image-url="<%= _.state.pictures && _.state.pictures.length && _.state.pictures[0] && _.state.pictures[0].zoom && _.state.pictures[0].zoom.url %>"></div>


<%- await include('@/helpers/widgets-append', {
  _, opt: {}, field: 'productDescriptionAppend'
}) %>
